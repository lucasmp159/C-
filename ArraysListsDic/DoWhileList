using System;
using System.Collections.Generic;

namespace teste
{
	public class test {
		public void testando(){
			
			do{
				List<int> num = new List<int>();
				Console.WriteLine("Escolha um n√∫mero para a lista: ");
				int n = Convert.ToInt32(Console.ReadLine());
				if (n < 0)
					num.Add(0);
				else
					num.Add(n);
			}while (num.Capacity = 10);
		}
	}
	public class Program{
				public static void Main(String[] args){
					test obj = new test();
					obj.testando();
			}
		}
	}
